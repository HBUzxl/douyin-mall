    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Atlas (via Go)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/atlas/atlas.go", // 直接指向 main.go 文件
            "args": ["-f", "${workspaceFolder}/atlas/etc/atlas-api.yaml"], // 启动参数
            "env": {},
            "cwd": "${workspaceFolder}" // 设置工作目录为项目根目录
        },
    ]
}